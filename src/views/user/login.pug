extends ../main-layout.pug

block append main-layout__head__stylesheets
    link( rel="stylesheet" href="/styles/form-reg-log.css" type="text/css" )

block main-layout__header__menu
    ul.main-layout__menu
        a( href="/" )
            li Home
        if userEmail
            a( href="/product/new" )
                li Add Product
                style.
                    .main-layout__menu {
                        grid-template-columns: 100px 120px 1fr 100px 100px 100px;
                    }
        div
        a( href="/register" )
            li Register
        a( href="/login" )
            li( class="active" ) Login
        a( href="/logout" )
            li Logout

block main-layout__header__err
    div#err=ERR

block main-layout__block
    h1 Register
    form( method="POST" action="/login" class="form-reg-log" )
        input( type="hidden" name="path" id="path" value=`${path}`)
        div( class="form-reg-log_field" )
            label( for="email" ) Email*
            input( type="text" name="email" id="email" value=`${usr['email'] || ''}`)
        div( class="form-reg-log_field" )
            label( for="password" ) Password*
            input( type="password" name="password" id="password" )
        div( class="form-reg-log_field submit" )
            label( for="password_repeat" ) 
            button( type="submit" ) Submit